{% extends 'base.html.twig' %}

{% block title %}OSLO | Administration des bases de défense{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('scriptContactCirisi') }}
{% endblock %}

{% block body %}

    <h1 class="mainTitle">Contacts CIRISI</h1>
    <div class="container">

        <div class="col">
            <a href="{{ path ('Admin_contacts') }}" class="btn btn-outline-secondary">Retour <i class="fas fa-chevron-left"></i></a>
        </div>

        <!-- Button trigger modal new contactCirisi -->
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modal">
            Nouveau contact <i class="fas fa-plus-square"></i>
        </button>

        <!-- Button trigger modal delete -->
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#modalDelete1">
            Supprimer la sélection <i class="fas fa-trash"></i>
        </button>


        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col"><i class="fas fa-check"></i></th>
                <th scope="col">Contact</th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Mail</th>
                <th scope="col">Téléphone</th>
                <th scope="col">CIRISI</th>
                <th scope="col">Modifier</th>
            </tr>
            </thead>
            <tbody>
            {% for ContactCirisi in ContactCirisis %}
                <tr>
                    <th scope="row">
                        <div class="form-check">
                            <label for="checkbox{{ ContactCirisi.idContact.idContact }}"></label>
                            <input form="contactCirisiFormDelete" class="form-check-input checkboxContactCirisi" name="idChecked{{ ContactCirisi.idContact.idContact }}" type="checkbox" value="{{ ContactCirisi.idContact.idContact }}" id="checkbox{{ ContactCirisi.idContact.idContact }}">
                        </div>
                    </th>
                    <td>{{ ContactCirisi.intituleContact }}</td>
                    <td>{{ ContactCirisi.nomContact }}</td>
                    <td>{{ ContactCirisi.prenomContact }}</td>
                    <td>{{ ContactCirisi.emailContact }}</td>
                    <td>{{ ContactCirisi.telContact }}</td>
                    <td>{{ ContactCirisi.idCirisi.Cirisi }}</td>
                    <td>
                        <!-- Button trigger modal edit -->
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalEdit1{{ ContactCirisi.idContact.idContact }}">
                            <i class="fas fa-edit"></i>
                        </button>

                        <!-- Modal edit-->
                        <div class="modal fade" id="modalEdit1{{ ContactCirisi.idContact.idContact }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title" id="exampleModalLabel">Modifier</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form id="contactCirisiFormEdit{{ ContactCirisi.idContact.idContact }}" class="contactCirisiFormEdit" action="{{ path ('Admin_ContactCirisi_Edit', {id: ContactCirisi.idContact.idContact })}}" method="post">
                                        <div class="modal-body">
                                            <div class="container mt-4">
                                                <h2>Modifier les informations du contact :</h2>
                                                <div class="input-group mb-3">
                                                    <span class="input-group-text">Intitulé du contact</span>
                                                    <input value="{{ ContactCirisi.intituleContact }}" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="intituleContactCirisiEdit" name="intituleContactCirisiEdit">
                                                </div>
                                                <div class="input-group mb-3">
                                                    <span class="input-group-text">Nom</span>
                                                    <input value="{{ ContactCirisi.nomContact }}" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="nomContactCirisiEdit" name="nomContactCirisiEdit">
                                                </div>
                                                <div class="input-group mb-3">
                                                    <span class="input-group-text">Prénom</span>
                                                    <input value="{{ ContactCirisi.prenomContact }}" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="prenomContactCirisiEdit" name="prenomContactCirisiEdit">
                                                </div>
                                                <div class="input-group mb-3">
                                                    <span class="input-group-text">Mail</span>
                                                    <input value="{{ ContactCirisi.emailContact }}" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="mailContactCirisiEdit" name="mailContactCirisiEdit">
                                                </div>
                                                <div class="input-group mb-3">
                                                    <span class="input-group-text">Téléphone</span>
                                                    <input value="{{ ContactCirisi.telContact }}" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="telContactCirisiEdit" name="telContactCirisiEdit">
                                                </div>
                                                <select name="cirisiEdit" class="form-select" aria-label="Default select example">
                                                    <option selected value="{{ ContactCirisi.idCirisi.idCirisi }}">{{ ContactCirisi.idCirisi.Cirisi }}</option>
                                                    {% for Cirisi in Cirisis %}
                                                        <option value="{{ Cirisi.idCirisi }}">{{ Cirisi.Cirisi }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <input type="hidden" id="_token" name="_token" value={{ csrf_token ('EditContactCirisi')}}>
                                            <input type="hidden" name="idEdit" value="{{ ContactCirisi.idContact.idContact }}">
                                            <button type="submit" id="submitEdit" class="btn btn-primary" data-bs-target="#modalEdit2" data-bs-toggle="modal" data-bs-dismiss="modalEdit1{{ ContactCirisi.idContact.idContact }}">Enregistrer</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(ContactCirisis) }}
        </div>

    </div>

    <!-- Modals new contactCirisi-->
    <!-- First modal dialog create-->
    <div class="modal fade" id="modal" data-bs-focus="true" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title" id="modalLabel">Nouveau contact :</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="contactCirisiFormCreate" action="{{ path ('Admin_ContactCirisi_New')}}" method="post">
                    <div class="modal-body">
                        <div class="input-group mb-3">
                            <span class="input-group-text">Intitulé du contact</span>
                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="intituleContactCirisi" name="intituleContactCirisi">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Nom</span>
                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="nomContactCirisi" name="nomContactCirisi">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Prénom</span>
                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="prenomContactCirisi" name="prenomContactCirisi">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Mail</span>
                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="mailContactCirisi" name="mailContactCirisi">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Téléphone</span>
                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="telContactCirisi" name="telContactCirisi">
                        </div>
                        <input type="hidden" id="_token" name="_token" value={{ csrf_token ('CreateContactCirisi')}}>
                        <select name="cirisi" class="form-select" aria-label="Default select example">
                            <option selected>CIRISI</option>
                            {% for Cirisi in Cirisis %}
                                <option value="{{ Cirisi.idCirisi}}">{{ Cirisi.Cirisi}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="modal-footer">
                        <!-- send request-->
                        <button id="submit" class="btn btn-primary" data-bs-target="#modal2" data-bs-toggle="modal" data-bs-dismiss="modal">Enregistrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Second modal create -->
    <div class="modal fade" id="modal2" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="loading">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="ajax-modal"></div>
                </div>
                <div class="modal-footer">
                    <!-- close second create -->
                    <button onClick="window.location.reload();" class="btn btn-primary" data-bs-target="#modal2" data-bs-toggle="modal" data-bs-dismiss="modal2"><i class="fas fa-check"></i> Ok</button>
                </div>
            </div>
        </div>
    </div>

    {#modal delete ContactCirisi#}
    <!-- Modal delete-->
    <div class="modal fade" id="modalDelete1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title" id="exampleModalLabel">Modifier</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container mt-4">
                        <div class="input-group mb-3">
                            <h2>Attention ! Cette action est irréversible.</h2>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <form id="contactCirisiFormDelete" action="{{ path ('Admin_ContactCirisi_Delete')}}" method="post">
                        <input type="hidden" id="_token" name="_token" value={{ csrf_token ('DeleteContactCirisi')}}>
                        <button class="btn btn-danger" data-bs-target="#modalDelete2" data-bs-toggle="modal" data-bs-dismiss="modalDelete1">
                            Confirmer <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Second modal delete -->
    <div class="modal fade" id="modalDelete2" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="loading">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="ajax-modalDelete"></div>
                </div>
                <div class="modal-footer">
                    <!-- close second delete -->
                    <button onClick="window.location.reload();" class="btn btn-primary" data-bs-target="#modalDelete2" data-bs-toggle="modal" data-bs-dismiss="modalDelete2"><i class="fas fa-check"></i> Ok</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Second modal edit -->
    <div class="modal fade" id="modalEdit2" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="loading">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="ajax-modalEdit"></div>
                </div>
                <div class="modal-footer">
                    <!-- close second edit -->
                    <button onClick="window.location.reload();" class="btn btn-primary" data-bs-target="#modalEdit2" data-bs-toggle="modal" data-bs-dismiss="modalEdit2"><i class="fas fa-check"></i> Ok</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}