{% extends 'base.html.twig' %}

{% block title %}OSLO | Administration des sigles{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block javascripts %}

{% endblock %}

{% block body %}

    <h1 class="mainTitle">Sigles</h1>
    <div class="container js-Ajax">

        <div class="col">
            <a href="{{ path ('Admin') }}" class="btn btn-outline-secondary">Retour <i class="fas fa-chevron-left"></i></a>
        </div>

        <!-- Button trigger modal new sigle -->
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modal">
            Nouveau Sigle <i class="fas fa-plus-square"></i>
        </button>

        <!-- Button trigger modal delete -->
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#modalDelete1">
            Supprimer la sélection <i class="fas fa-trash"></i>
        </button>


        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col"><i class="fas fa-check"></i></th>
                <th scope="col">Entité</th>
                <th scope="col">Sigle</th>
                <th scope="col">Modifier</th>
            </tr>
            </thead>
            <tbody>
            {% for sigle in Sigles %}
                <tr>
                    <th scope="row">
                        <div class="form-check">
                            <label for="checkbox{{ sigle.idSigle }}"></label>
                            <input form="sigleFormDelete" class="form-check-input checkboxSigle" name="idChecked{{ sigle.idSigle }}" type="checkbox" value="{{ sigle.idSigle }}" id="checkbox{{ sigle.idSigle }}">
                        </div>
                    </th>
                    <td>
                        {% if sigle.intituleSigle == 'internet_militaire' %}
                            Internet militaire
                        {% elseif  sigle.intituleSigle == 'modifLan'%}
                            Modification Lan
                        {% elseif  sigle.intituleSigle == 'accesWan'%}
                            Accès wan
                        {% elseif  sigle.intituleSigle == 'besoinNouveauReseau'%}
                            Besoin nouveau réseau
                        {% elseif  sigle.intituleSigle == 'ficheExpressionBesoinCOM'%}
                            Fiche expression besoin COM
                        {% endif%}
                    </td>
                    <td>{{ sigle.sigle }}</td>
                    <td>
                        <!-- Button trigger modal edit -->
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalEdit1{{ sigle.idSigle }}">
                            <i class="fas fa-edit"></i>
                        </button>

                        <!-- Modal edit-->
                        <div class="modal fade" id="modalEdit1{{ sigle.idSigle }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title" id="exampleModalLabel">Modifier</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form id="sigleFormEdit{{ sigle.idSigle }}" class="sigleFormEdit js-Ajax-form" action="{{ path ('Admin_Sigle_Edit', {id: sigle.idSigle })}}" method="post">
                                        <div class="modal-body">
                                            <div class="container mt-4">
                                                <h2>Modifier le sigle :</h2>
                                                <select name="intituleSiglesEdit" class="form-select mb-3" aria-label="Default select example">
                                                    <option selected value="{{ sigle.intituleSigle }}">
                                                        {% if sigle.intituleSigle == 'internet_militaire' %}
                                                            Internet militaire
                                                        {% elseif  sigle.intituleSigle == 'modifLan'%}
                                                            Modification Lan
                                                        {% elseif  sigle.intituleSigle == 'accesWan'%}
                                                            Accès wan
                                                        {% elseif  sigle.intituleSigle == 'besoinNouveauReseau'%}
                                                            Besoin nouveau réseau
                                                        {% elseif  sigle.intituleSigle == 'ficheExpressionBesoinCOM'%}
                                                            Fiche expression besoin COM
                                                        {% endif%}
                                                    </option>
                                                    <option value="internet_militaire">Internet militaire</option>
                                                    <option value="modifLan">Modification Lan</option>
                                                    <option value="accesWan">Accès wan</option>
                                                    <option value="besoinNouveauReseau">Besoin nouveau réseau</option>
                                                    <option value="ficheExpressionBesoinCOM">Fiche expression besoin COM</option>
                                                </select>
                                                <div class="input-group mb-3">
                                                    <span class="input-group-text">Sigle</span>
                                                    <input type="text" class="form-control" value="{{ sigle.sigle }}" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="sigleEdit" name="sigleEdit">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <input type="hidden" id="_token" name="_token" value={{ csrf_token ('EditSigle')}}>
                                            <input type="hidden" name="idEdit" value="{{ sigle.idSigle }}">
                                            <button type="submit" id="submitEdit" class="btn btn-primary" data-bs-target="#modal2" data-bs-toggle="modal" data-bs-dismiss="modalEdit1{{ sigle.idSigle }}">Enregistrer</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(Sigles) }}
        </div>

        <!-- Modals new sigle-->
        <!-- First modal dialog create-->
        <div class="modal fade" id="modal" data-bs-focus="true" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title" id="modalLabel">Nouveau sigle :</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form id="sigleFormCreate" action="{{ path ('Admin_Sigle_New')}}" method="post" class="js-Ajax-form">
                        <div class="modal-body">
                            <select name="intituleSigles" class="form-select mb-3" aria-label="Default select example">
                                <option selected>Entité</option>
                                <option value="internet_militaire">Internet militaire</option>
                                <option value="modifLan">Modification Lan</option>
                                <option value="accesWan">Accès wan</option>
                                <option value="besoinNouveauReseau">Besoin nouveau réseau</option>
                                <option value="ficheExpressionBesoinCOM">Fiche expression besoin COM</option>
                            </select>
                            <div class="input-group mb-3">
                                <span class="input-group-text">Sigle</span>
                                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="sigle" name="sigles">
                            </div>
                            <input type="hidden" id="_token" name="_token" value={{ csrf_token ('CreateSigle')}}>
                        </div>
                        <div class="modal-footer">
                            <!-- send request-->
                            <button id="submit" class="btn btn-primary" data-bs-target="#modal2" data-bs-toggle="modal" data-bs-dismiss="modal">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {#modal delete Sigle#}
        <!-- Modal delete-->
        <div class="modal fade" id="modalDelete1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title" id="exampleModalLabel">Modifier</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="container mt-4">
                            <div class="input-group mb-3">
                                <h2>Attention ! Cette action est irréversible.</h2>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <form id="sigleFormDelete" action="{{ path ('Admin_Sigle_Delete')}}" method="post" class="js-Ajax-form">
                            <input type="hidden" id="_token" name="_token" value={{ csrf_token ('DeleteSigle')}}>
                            <button class="btn btn-danger" data-bs-target="#modal2" data-bs-toggle="modal" data-bs-dismiss="modalDelete1">
                                Confirmer <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Second modal edit -->
        <div class="modal fade" id="modal2" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="loading">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                        <div id="ajax-modal"></div>
                    </div>
                    <div class="modal-footer">
                        <!-- close second edit -->
                        <button onClick="window.location.reload();" class="btn btn-primary" data-bs-target="#modal2" data-bs-toggle="modal" data-bs-dismiss="modal2"><i class="fas fa-check"></i> Ok</button>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}