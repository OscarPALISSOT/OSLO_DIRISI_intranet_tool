{% extends 'base.html.twig' %}

{% block title %}OSLO | Administration{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('cards') }}
{% endblock %}

{% block javascripts %}

{% endblock %}

{% block body %}

    <h1 class="mainTitle">Tableau de bord</h1>
    <div class="container js-Ajax">

        <h2 class="mb-4">Gestion des informations : </h2>
        <div class="row">
            {# card Contact#}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-id-card"></i> Contacts</h3>
                        <p class="card-text">Il y a actuellement {{ nbContact }} contacts enregistrés</p>
                        <a href="{{ path ('Admin_contacts') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card Contact #}
            {# card sigle#}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-spell-check"></i> Sigles</h3>
                        <p class="card-text">Il y a actuellement {{ nbSigle }} sigles enregistrés</p>
                        <a href="{{ path ('Admin_Sigle') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card sigle #}
            {# card GrandsComptes#}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-euro-sign"></i> Grands comptes</h3>
                        <p class="card-text">Il y a actuellement {{ nbGrandComptes }} grands comptes enregistrés</p>
                        <a href="{{ path ('Admin_GrandsComptes') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card GrandsComptes #}
            {# card Priorisation#}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-layer-group"></i> Priorisations</h3>
                        <p class="card-text">Il y a actuellement {{ nbPriorisation }} priorisations enregistrées</p>
                        <a href="{{ path ('Admin_Priorisation') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card Priorisation #}
            {# card NatureAffaire#}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-folder-open"></i> Natures des affaires</h3>
                        <p class="card-text">Il y a actuellement {{ nbNatureAffaire }} natures d'affaire enregistrées</p>
                        <a href="{{ path ('Admin_NatureAffaire') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card NatureAffaire #}
            {# card StatutPdc#}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-step-forward"></i> Statuts des plans de charge</h3>
                        <p class="card-text">Il y a actuellement {{ nbStatutPdc }} statuts de plan de charge d'affaire enregistrés</p>
                        <a href="{{ path ('Admin_StatutPdc') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card StatutPdc #}
            {# card users#}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-user"></i> Utilisateurs</h3>
                        <p class="card-text">Il y a actuellement {{ nbUser }} utilisateurs enregistrés</p>
                        <a href="{{ path ('Admin_Users') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card users #}
        </div>
        <h2 class="mb-4">Gestion de la base de données : </h2>
        <button href="{{ path ('Admin_contacts') }}" class="btn btn-outline-success mb-4" data-bs-target="#modalImport1" data-bs-toggle="modal">Importer la base de données depuis un csv <i class="fas fa-file-import"></i></button>

        <div class="row">
            {# card Bases de défense #}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-building"></i> Bases de défense</h3>
                        <p class="card-text">Il y a actuellement {{ nbBdd}} bases de défense enregistrées</p>
                        <a href="{{ path ('Admin_Bdd') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card Bases de défense #}
            {# card Cirisi#}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-building"></i> CIRISI</h3>
                        <p class="card-text">Il y a actuellement {{ nbCirisi }} CIRISI enregistrés</p>
                        <a href="{{ path ('Admin_Cirisi') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card Cirisi #}
            {# card RFZ#}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-wifi"></i> Routeurs fédérateurs de zone</h3>
                        <p class="card-text">Il y a actuellement {{ nbRfz }} routeurs fédérateurs de zone enregistrés</p>
                        <a href="{{ path ('Admin_Rfz') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card RFZ #}
            {# card quartier#}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-building"></i> Quartiers</h3>
                        <p class="card-text">Il y a actuellement {{ nbQuartier }} quartiers enregistrés</p>
                        <a href="{{ path ('Admin_Quartiers') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card quartier #}
            {# card organisme#}
            <div class="col-lg-3 col-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><i class="fas fa-building"></i> Organismes</h3>
                        <p class="card-text">Il y a actuellement {{ nbOrganisme }} organismes enregistrés</p>
                        <a href="{{ path ('Admin_Organisme') }}" class="btn btn-outline-primary">Voir plus</a>
                    </div>
                </div>
            </div>
            {# /card organisme #}
        </div>

        <!-- first modal -->
        <div class="modal fade" id="modalImport1" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Attention ! <i class="fas fa-exclamation-triangle"></i></h2>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h4>Vous vous apprêtez à modifier la base de données.
                            Assurez vous d'avoir un fichier CSV conforme.
                        </h4>
                        <form id="importDatabase" action="{{ path ('importDatabase')}}" method="post" class="js-Ajax-form">
                            <form>
                                <div class="form-group">
                                    <label for="file">Fichier</label>
                                    <input type="file" class="form-control-file" id="file" name="CsvDatabaseImport" style="font-size: medium" accept=".csv">
                                </div>
                            </form>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <!-- close first modal -->
                        <button form="importDatabase" type="submit" class="btn btn-primary" data-bs-target="#modal2" data-bs-toggle="modal" data-bs-dismiss="modalImport1"><i class="fas fa-check"></i> Ok</button>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Second modal -->
    <div class="modal fade" id="modal2" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="loading">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="ajax-modal"></div>
                </div>
                <div class="modal-footer">
                    <!-- close second create -->
                    <button onclick="window.location.reload()" class="btn btn-primary js-modal-reset" data-bs-target="#modal2" data-bs-toggle="modal" data-bs-dismiss="modal2"><i class="fas fa-check"></i> Ok</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}