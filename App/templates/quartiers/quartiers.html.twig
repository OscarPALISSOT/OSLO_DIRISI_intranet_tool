{% block body %}
    <div class="container-fluid">
        {% if Quartier.quartier %}
            <h1 class="titre">Quartier{{ Quartier.quartier }}</h1>
        {% else %}
            <h1 class="titre">{{ Quartier.trigramme }}</h1>
        {% endif %}

        <div class="col-6 infoQuartiers">
        <div class="card ">
            <div class="card-body">
                <h3 class="card-title"><i class="fas fa-id-card"></i></h3>
                <ul class="card-text">
                    <li>RFZ : {{ Quartier.IdBaseDefense.IdRfz.rfz }}</li>
                    <li>Base de défense : {{ Quartier.IdBaseDefense.baseDefense }}</li>
                    <li>Trigramme : {{ Quartier.IdBaseDefense.baseDefense }}</li>
                    <li>Nom du quartier :
                        {% if Quartier.quartier %}
                            {{ Quartier.quartier }}
                        {% else %}
                        non renseigné
                        {% endif %}
                    </li>
                    <li>Adresse : {{ Quartier.adresseQuartier }}</li>
                </ul>
            </div>
        </div>
        </div>
        <h2 class="titre">Organismes</h2>
        <div class="encadrement">
