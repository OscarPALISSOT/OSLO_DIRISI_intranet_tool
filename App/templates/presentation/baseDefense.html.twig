{% extends 'presentation/presentation.html.twig' %}

{% block titleSidenav %}
        {{ BaseDefense.BaseDefense }}
{% endblock %}

{% block sideNav %}
    <li class="sideNavItem">
        <a href="#acceswan" class="">{{ Sigle['accesWan'] }}</a>
    </li>
    <li class="sideNavItem">
        <a href="#internetMilitaire" class="">{{ Sigle['internet_militaire'] }}</a>
    </li>
    <li class="sideNavItem">
        <a href="#Feb" class="">Feb</a>
    </li>
    <li class="sideNavItem">
        <a href="#Affaire" class="">Affaires</a>
    </li>
{% endblock %}

{% block titleBody %}
    <h1 class="titleBody">Base de défense</h1>
{% endblock %}

{% block PresentationCardBody %}
    <h3 class="card-title">
        {{ BaseDefense.BaseDefense }}
        <i class="fas fa-id-card"></i>
    </h3>
    <ul class="card-text">
        <li>RFZ : {{ BaseDefense.IdRfz.rfz }}</li>
    </ul>
{% endblock %}



{% block Budget %}
    <h1 class="titleBody">Budget Feb Com BDD</h1>
    {% if BudgetFebCom %}
        {% for BudgetFebCom in BudgetFebCom %}
            <div class="encadrementChild">
                <span class="label">Année FebCom : </span>
                {{ BudgetFebCom.anneeFebCom }}
                <br>
                <span class="label">Budget FebCom :</span>
                {{ BudgetFebCom.enveloppe }} euros
                <br>
                <span class="label">FebCom consommé : </span>
                {{ BudgetFebCom.febComConsomme }} euros
                <br>
                <span class="label">Reliquat :</span>
                {{ BudgetFebCom.reliquat1erVersement }} euros
                <br>
            </div>
        {% endfor %}
    {% else %}
        <h3 class="title">Pas de budget Feb Com renseigné</h3>
    {% endif %}
{% endblock %}

{% block titleChild %}
    <h1 class="titleChild">Quartiers</h1>
{% endblock %}

{% block ChildContent %}
    {% for Quartier in Quartiers %}
        <div class="col-4">
            <a class="childLink" href="{{ path ('Quartier', {trigramme: Quartier.trigramme, BaseDefense: BaseDefense.idBaseDefense}) }}">
                {{ Quartier.trigramme }} - {{ Quartier.quartier }}
                <span><i class="fas fa-caret-square-right"></i></span>
            </a>
        </div>
    {% endfor %}
{% endblock %}




