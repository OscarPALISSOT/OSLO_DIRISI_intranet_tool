<!DOCTYPE html>
<html lang="">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}OSLO{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset ('images/favicon.ico') }}?v=2" />
        {{ encore_entry_link_tags('bootstrap') }}
        {{ encore_entry_link_tags('style') }}
        {{ encore_entry_link_tags('multiselect') }}
        {{ encore_entry_link_tags('multiselect') }}

        <div class="app-script">
            {{ encore_entry_script_tags('App') }} {# import Jquery #}
            {{ encore_entry_script_tags('bootstrap.bundle.min.js') }} {# import bootstrap javascript#}
            {{ encore_entry_script_tags('multiselectJS') }}
        </div>
        {{ encore_entry_script_tags('fontawesome') }} {# import icons #}



        {% block stylesheets %}

        {% endblock %}

        {% block javascripts %}

        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a href ="/" class="navbar-brand"><img alt="logo" src="{{ asset('images/logo.png') }}"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="navbar-toggler-icon fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNavDarkDropdown">
                    <ul  class="nav mr-auto">
                        <li class="nav-item"><a href="/" class="nav-link">Accueil</a></li>

                        {% if app.user %}
                            <li class="dropdown nav-item">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Profil - {{ app.user.user }} <i class="fas fa-caret-down"></i>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">

                                    {% if app.user.roles[0] == 'ROLE_ADMIN'%}
                                        <a class="dropdown-item" href="{{ path ('Admin') }}">Administration OSLO</a>
                                        <a class="dropdown-item" href="{{ path ('Gestion', {role: 'BPT'})}}">Gestion BPT</a>
                                        <a class="dropdown-item" href="{{ path ('Gestion', {role: 'BRC'})}}">Gestion BRC</a>
                                        <a class="dropdown-item" href="{{ path ('Gestion', {role: 'BCS'})}}">Gestion BCS</a>
                                    {% else %}
                                        <a class="dropdown-item" href="{{ path ('Gestion', {role: app.user.roles[0]})}}">Gestion {{ app.user.roles[0] }}</a>
                                    {% endif %}
                                    <div class="dropdown-divider"></div>
                                    <a href="/logout" class="dropdown-item">Se d√©connecter</a>
                                </div>
                            </li>
                            {% if app.user.roles[0] == 'ROLE_ADMIN'%}
                                <li class="nav-item"><a class="nav-link" href="{{ path ('Admin') }}">Administration OSLO</a></li>
                            {% else %}
                                <li class="nav-item"><a class="nav-link" href="{{ path ('Gestion', {role: app.user.roles[0]})}}">Gestion {{ app.user.roles[0] }}</a></li>
                            {% endif %}
                        {% else %}
                            <li class="nav-item"><a href="{{ path ('login') }}" class="nav-link">Se connecter</a></li>
                        {% endif %}
                    </ul>
                    <ul  class="nav mr-auto">
                        <li class="nav-item"><a href="{{ path ('contact') }}" class="nav-link">Contact</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        {% block SideNavBase %}

        {% endblock %}
        <div id="main">
            {% block body %}


            {% endblock %}
        </div>
    </body>
</html>
