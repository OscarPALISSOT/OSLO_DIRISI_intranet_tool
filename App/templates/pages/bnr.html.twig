{% extends 'sidenav.html.twig' %}

{% block titleSidenav %}OSLO | BNR{% endblock %}

{% block stylesheetsSidenav %}
    {{ encore_entry_link_tags('sidenav') }}
{% endblock %}

{% block javascriptsSidenav %}

{% endblock %}

{% block sideNav %}
    {% if app.user.roles[0] == 'ROLE_ADMIN'%}
        <li class="sideNavItem">
            <a href="{{ path ('Gestion', {role: 'BRC'})}}" class="">Accueil</a>
        </li>
    {% else %}
        <li class="sideNavItem">
            <a href="{{ path ('Gestion', {role: app.user.roles[0]})}}" class="">Accueil {{ app.user.roles[0] }}</a>
        </li>
    {% endif %}

    {% if app.User.roles[0] != 'BCS' %}
        <li class="sideNavItem">
            <a href="{{ path ('Bnr', {role: app.user.roles[0]})}}" class="">BNR</a>
        </li>
        <li class="sideNavItem">
            <a href="{{ path ('contactCirisi') }}" class="">MODIP</a>
        </li>
    {% endif %}
    {% if app.User.roles[0] != 'BPT' %}
        <li class="sideNavItem">
            <a href="{{ path ('contactBdd') }}" class="">MIM3</a>
        </li>
        <li class="sideNavItem">
            <a href="{{ path ('contactBdd') }}" class="">OPERA</a>
        </li>
    {% endif %}

{% endblock %}

{% block body %}
    <h1 class="mainTitle">BNR</h1>

    <div class="container">

        <div class="col">
            <a href="{{ path ('Gestion', {role: 'BRC'})}}" class="btn btn-outline-secondary">Retour <i class="fas fa-chevron-left"></i></a>
        </div>

        <!-- Button trigger modal create -->
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modal">
            Nouveau BNR <i class="fas fa-plus-square"></i>
        </button>

        <!-- Button trigger modal delete -->
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#modalDelete1">
            Supprimer la sélection <i class="fas fa-trash"></i>
        </button>

        <button type="button" class="btn btn-outline-success">
            Exporter au format Excel <i class="far fa-file-excel"></i>
        </button>

        <p>
            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                Filtrer <i class="fas fa-filter"></i>
            </button>
        </p>
        <div class="collapse" id="collapseExample">
            <div class="card card-body">
                Form
            </div>
        </div>

        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col"><i class="fas fa-check"></i></th>
                    <th scope="col">Priorité</th>
                    <th scope="col">Projet</th>
                    <th scope="col">Montant</th>
                    <th scope="col">Organisme</th>
                    <th scope="col">Échéance</th>
                    <th scope="col">État</th>
                    <th scope="col">Commentaire</th>
                    <th scope="col">Modifier</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th scope="row">
                        <div class="form-check">
                        </div>
                    </th>
                    <td></td>
                    <td></td>
                    <td></td>
            </table>
        </div>
    </div>

    <!-- Modals new bnr-->
    <!-- First modal dialog create-->
    <div class="modal fade" id="modal" data-bs-focus="true" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title" id="modalLabel">Nouveau BNR :</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="bnrFormCreate" action="{{ path ('Admin_Bnr_New')}}" method="post">
                    <div class="modal-body">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="bnr" name="bnr" placeholder="name@example.com">
                            <label for="bnr">Nom du projet</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="montant" name="montant" placeholder="name@example.com">
                            <label for="montant">Montant</label>
                        </div>
                        <select class="form-select mb-3" aria-label="Default select example">
                            <option selected>Organisme</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>



                        <select class="form-select mb-3" aria-label="Default select example">
                            <option selected>État</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <div class="form-floating mb-3">
                            <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Commentaire</label>
                        </div>
                        <input type="hidden" id="_token" name="_token" value={{ csrf_token ('CreateBnr')}}>
                    </div>
                    <div class="modal-footer">
                        <!-- send request-->
                        <button id="submit" class="btn btn-primary" data-bs-target="#modal2" data-bs-toggle="modal" data-bs-dismiss="modal">Enregistrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Second modal create -->
    <div class="modal fade" id="modal2" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="loading">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="ajax-modal"></div>
                </div>
                <div class="modal-footer">
                    <!-- close second create -->
                    <button onClick="window.location.reload();" class="btn btn-primary" data-bs-target="#modal2" data-bs-toggle="modal" data-bs-dismiss="modal2"><i class="fas fa-check"></i> Ok</button>
                </div>
            </div>
        </div>
    </div>

    {#modal delete Bnr#}
    <!-- Modal delete-->
    <div class="modal fade" id="modalDelete1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title" id="exampleModalLabel">Modifier</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container mt-4">
                        <div class="input-group mb-3">
                            <h2>Attention ! Cette action est irréversible.</h2>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <form id="bnrFormDelete" action="{{ path ('Admin_Bnr_Delete')}}" method="post">
                        <input type="hidden" id="_token" name="_token" value={{ csrf_token ('DeleteBnr')}}>
                        <button class="btn btn-danger" data-bs-target="#modalDelete2" data-bs-toggle="modal" data-bs-dismiss="modalDelete1">
                            Confirmer <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Second modal delete -->
    <div class="modal fade" id="modalDelete2" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="loading">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="ajax-modalDelete"></div>
                </div>
                <div class="modal-footer">
                    <!-- close second delete -->
                    <button onClick="window.location.reload();" class="btn btn-primary" data-bs-target="#modalDelete2" data-bs-toggle="modal" data-bs-dismiss="modalDelete2"><i class="fas fa-check"></i> Ok</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Second modal edit -->
    <div class="modal fade" id="modalEdit2" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="loading">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="ajax-modalEdit"></div>
                </div>
                <div class="modal-footer">
                    <!-- close second edit -->
                    <button onClick="window.location.reload();" class="btn btn-primary" data-bs-target="#modalEdit2" data-bs-toggle="modal" data-bs-dismiss="modalEdit2"><i class="fas fa-check"></i> Ok</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}




