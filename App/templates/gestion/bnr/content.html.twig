<tr>
    <th scope="row">
        <div class="form-check">
            <label for="checkbox{{ Bnr.idBnr }}"></label>
            <input form="bnrFormDelete" class="form-check-input checkboxBnr" name="idChecked{{ Bnr.idBnr }}" type="checkbox" value="{{ Bnr.idBnr }}" id="checkbox{{ Bnr.idBnr }}">
        </div>
    </th>
    <td>{{ Bnr.objBnr }}</td>
    <td>{{ Bnr.prioBnr }}</td>
    <td>{{ Bnr.montantFeb|number_format(0, '.', ' ') }}</td>
    <td>{{ Bnr.IdOrganisme.Organisme }}</td>
    <td>{{ Bnr.IdOrganisme.IdQuartier.IdBaseDefense.BaseDefense }} - {{ Bnr.IdOrganisme.IdQuartier.Quartier }}</td>
    <td>{{ Bnr.IdOrganisme.IdQuartier.Trigramme }}</td>
    <td>{{ Bnr.echeanceBnr|date('d/m/Y')}}</td>
    <td>
        {% if Bnr.etatBnr == '1' %}
            Prévu
        {% else %}
            Traité
        {% endif %}

    </td>
    <td>{{ Bnr.commentaireBnr|nl2br }}</td>
    <td>
        <!-- Button trigger modal edit -->
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalEdit1{{ Bnr.idBnr }}">
            <i class="fas fa-edit"></i>
        </button>

        <!-- Modal edit-->
        <div class="modal fade" id="modalEdit1{{ Bnr.idBnr }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title" id="exampleModalLabel">Modifier</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form id="bnrFormEdit{{ Bnr.idBnr }}" class="bnrFormEdit" action="{{ path ('Admin_Bnr_Edit', {id: Bnr.idBnr })}}" method="post">
                        <div class="modal-body">
                            <div class="container mt-4">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="bnr" name="bnrEdit" value="{{ Bnr.objBnr }}" placeholder="name@example.com">
                                    <label for="bnr">Nom du projet</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="montant" name="montantEdit" value="{{ Bnr.montantFeb }}" placeholder="name@example.com">
                                    <label for="montant">Montant</label>
                                </div>
                                <select class="form-select mb-3" aria-label="Default select example" name="organismeEdit">
                                    <option selected value="{{ Bnr.IdOrganisme.IdOrganisme }}">{{ Bnr.IdOrganisme.IdQuartier.IdBaseDefense.BaseDefense }} - {{ Bnr.IdOrganisme.IdQuartier.Quartier }}</option>
                                    {% for Organisme in Organismes %}
                                        <option value="{{ Organisme.idOrganisme }}">{{ Organisme.Organisme }} - {{ Organisme.idQuartier.idBaseDefense.BaseDefense }} - {{ Organisme.idQuartier.Quartier }}</option>
                                    {% endfor %}
                                </select>
                                <select class="form-select mb-3" aria-label="Default select example" name="priorityEdit">
                                    <option selected value="{{ Bnr.prioBnr }}">{{ Bnr.prioBnr }}</option>
                                    <option value="P1">P1</option>
                                    <option value="P2">P2</option>
                                    <option value="P3">P3</option>
                                </select>
                                <div class="input-group mb-3 date datepicker">
                                    <input type="text" class="form-control" value="{{ Bnr.echeanceBnr|date('d/m/Y')}}" placeholder="Échéance" aria-label="datepicker" aria-describedby="basic-addon1" name="dateEdite"><span class="input-group-addon"></span>
                                    <span class="input-group-text" id="basic-addon1"><i class="far fa-calendar-alt"></i></span>
                                </div>

                                <select class="form-select mb-3" aria-label="Default select example" name="stateEdit">
                                    <option value="1" selected>
                                        {% if Bnr.etatBnr == '1' %}
                                            Prévu
                                        {% else %}
                                            Traité
                                        {% endif %}
                                    </option>
                                    <option value="1">Prévu</option>
                                    <option value="2">Traité</option>
                                </select>
                                <div class="form-floating mb-3">
                                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" name="commentEdit" style="height: 100px">{{ Bnr.commentaireBnr }}</textarea>
                                    <label for="floatingTextarea2">Commentaire</label>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="hidden" id="_token" name="_token" value={{ csrf_token ('EditBnr')}}>
                            <input type="hidden" name="idEdit" value="{{ Bnr.idBnr }}">
                            <button type="submit" id="submitEdit" class="btn btn-primary" data-bs-target="#modalEdit2" data-bs-toggle="modal" data-bs-dismiss="modalEdit1{{ Bnr.idBnr }}">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </td>
</tr>